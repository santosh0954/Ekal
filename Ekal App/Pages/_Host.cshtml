@page "/"
@namespace Ekal_App.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ekal App</title>
    <base href="~/" />
    <link href="css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link href="_content/Blazorise/blazorise.css" rel="stylesheet" />
    <link href="_content/Blazored.Menu/blazored-menu.css" rel="stylesheet" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />

    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" , crossorigin="anonymous" />
    <link href="_content/Blazored.Toast/blazored-toast.css" rel="stylesheet" />

    <style>
        body {
            font-family: roboto;
            font-size: 14px;
        }

        .form-control {
            font-size: 14px !important;
        }

        .submenu {
            list-style: none;
            margin: 0;
            padding-left: 15px;
            padding-top: 5px;
            padding-bottom: 5px;
        }

            .submenu a {
                display: block;
                padding: 10px;
                text-decoration: none;
                color: white;
                color: rgba(255, 255, 255, 0.7);
                border-radius: 5px;
                // border-bottom: 1px solid rgba($color: rgb(0, 0, 0), $alpha: 0.5);
                // border-top: 1px solid rgba($color: #fff, $alpha: 0.2);
                transition: all 0.2s;
                margin-bottom: 5px;
            }

                .submenu a:hover, .submenu a.active {
                    background: rgba(255,255,255, 0.6);
                    color: white;
                }
    </style>
    <style>
        .sidebar {
            overflow-y: auto;
        }
            /* width */
            .sidebar::-webkit-scrollbar {
                width: 5px;
            }

            /* Track */
            .sidebar::-webkit-scrollbar-track {
                background: transparent;
            }

            /* Handle */
            .sidebar::-webkit-scrollbar-thumb {
                background: #888;
                border-radius: 5px;
            }

                /* Handle on hover */
                .sidebar::-webkit-scrollbar-thumb:hover {
                    background: #555;
                }

        .content {
            overflow-x: auto;
            width: calc(100vw - 255px) !important;
        }

        .table {
            display: block;
            width: 100%;
            overflow-x: auto;
        }

        .nav-link {
            color: white !important;
        }

        a, span {
            text-decoration: none !important;
        }

            a:hover, span:hover {
                text-decoration: none !important;
            }

        .blazored-sub-menu li {
            transition: all 0.4s;
        }

            .blazored-sub-menu li:hover {
                background: rgba(255,255,255,0.5);
            }

            .blazored-sub-menu li a.active {
                display: block;
                width: 100%;
                height: 100%;
                background: rgba(255,255,255,0.5);
            }

            .blazored-sub-menu-header, .blazored-sub-menu li a, .blazored-sub-menu li a.active {
                color: white;
            }
    </style>
</head>
<body>
    <app>
        <component type="typeof(App)" render-mode="ServerPrerendered" />
    </app>

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_content/Blazorise/blazorise.js" ></script>
    <script src="_framework/blazor.server.js"></script>
    <script>
        document.querySelectorAll('.nav-link').forEach((item) => {
            item.addEventListener('click', caretDown);
        });
        //  function for changing the arrow for side menu 
        function caretDown() {
            if (this.childElementCount > 1) {
                if (this.children[1].classList.contains('fa-caret-left')) {
                    this.children[1].classList.remove('fa-caret-left');
                    this.children[1].classList.add('fa-caret-down');
                } else {
                    this.children[1].classList.add('fa-caret-left');
                    this.children[1].classList.remove('fa-caret-down');

                }
            }
        }
        (function () {
            document.querySelectorAll('.submenu a').forEach((item) => {
                if (item.classList.contains('active')) {
                    // console.log(item.parentElement.classList);
                    document.querySelectorAll('.list-menu-item').forEach((list) => {
                        list.classList.remove('active');
                    });
                    item.parentElement.classList.remove('collapse');
                    item.parentElement.previousElementSibling.children[1].classList.add('fa-caret-down');
                    item.parentElement.previousElementSibling.children[1].classList.remove('fa-caret-left');
                    item.parentElement.previousElementSibling.classList.add('active');
                    item.parentElement.classList.add('show');
                }
            });

        })();

    </script>
</body>
</html>
